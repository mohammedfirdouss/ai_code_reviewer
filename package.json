{
  "name": "ai-code-reviewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --config wrangler.prod.toml",
    "deploy:pages": "cd frontend && npm install && npm run build && cd .. && wrangler pages deploy frontend/dist",
    "deploy:all": "npm run deploy:prod && npm run deploy:pages",
    "dev:frontend": "npm run dev --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "setup": "./scripts/setup-env.sh",
    "check": "./scripts/pre-deploy-check.sh",
    "verify": "./scripts/verify-deployment.sh",
    "logs": "wrangler tail",
    "logs:prod": "wrangler tail --config wrangler.prod.toml",
    "preview": "wrangler dev --remote"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.15",
    "@cloudflare/workers-types": "^4.20241011.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5",
    "wrangler": "^4.43.0"
  }
}
