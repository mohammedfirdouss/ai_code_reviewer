{
  "name": "ai-code-reviewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --config wrangler.prod.toml",
    "dev:frontend": "npm run dev --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "setup": "./setup-env.sh",
    "check": "./pre-deploy-check.sh",
    "verify": "./verify-deployment.sh",
    "logs": "wrangler tail",
    "logs:prod": "wrangler tail --config wrangler.prod.toml",
    "preview": "wrangler dev --remote"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241011.0",
    "@cloudflare/vitest-pool-workers": "^0.5.15",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5",
    "wrangler": "^3.86.1"
  }
}
